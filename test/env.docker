COMPOSE_PROJECT_NAME=txrouter
MONGO_DATABASE=plugindb
MONGO_COLLECTION=plugincollection
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=example
MONGO_NON_ROOT_USERNAME=db
MONGO_NON_ROOT_PASSWORD=collection
MONGODB_DATA_DIR=./build/mongodb/data
INIT_PLUGIN_PATH=./build/plugin
TXROUTER_MONGO_CONTAINER=txrouter-mongodb
DOCKER_SOCK=/var/run/docker.sock
API_PORT=8080
TXROUTER_JWT_SECRET=secret
# SSL_CERT_DIR=
#
# use the following port for standing up a webserver
# to test against a 'mock' plugin
# hence,
# this port must be available on the server for tests to pass
TXROUTER_TEST_PLUGIN_PORT=80
TXROUTER_TEST_NGINX_CONTAINER_VERSION=1.17.4
TXROUTER_TAG=latest
TXROUTER_PORT=8080
# version is defined by the system using the router
# e.g., the system could be PDS or CellFIE, 
#  the TXROUTER_TAG defines the version of the router container
#  and SYSTEM_VERSION is embedded in the router URL
#  to distinguish the version of the container combination
FRAMEWORK_VERSION=v1
